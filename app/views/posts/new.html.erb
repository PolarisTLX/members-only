<% if @post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@post.errors.count, "error")%>
      prevent this post from being saved:</h2>

      <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<%= form_for @post do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <br/><br/>

    <%= f.label :body %>
    <%= f.text_area :body %>

    <br/><br/>
    
    <%= f.submit "Submit Your New Gossip Post" %>

<% end %>
